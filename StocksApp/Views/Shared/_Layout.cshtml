<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<body>
    <div class="container">
        <div class="flex mt mb">
            <div class="flex-1" id="app-title-div">
                <h1 class="app-title">
                    <i class="fa-solid fa-money-bill-trend-up"></i>
                    Stocks
                </h1>
            </div>
            <div class="flex text-right" style="align-items: center;">
                <input type="search" class="search-text" placeholder="Search Stocks"/>
                <a href="#" style="margin-left: 5px; margin-right: 25px;">
                    <i class="fa-solid fa-gear" style="color: black;"></i>
                </a>
                <button class="button login-button button-blue-back">Login</button>
            </div>
        </div>
        <div class="navbar flex">
            <div class="flex">
                <a asp-action="Explore" asp-controller="Stocks" class="link-hover @(ViewBag.ActivePage != null && ViewBag.ActivePage == "Trade/Explore" ? "nav-active" : "")" style="text-decoration: none; color: #0349A3;">Explore</a>
                <div style="margin: 0 5px;"></div>
                <a asp-action="Index" asp-controller="Trade" class="link-hover @(ViewBag.ActivePage != null && ViewBag.ActivePage == "Trade/Index" ? "nav-active" : "")" style="text-decoration: none; color: #0349A3;">Trade</a>
                <div style="margin: 0 5px;"></div>
                <a asp-action="Orders" asp-controller="Trade" class="link-hover @(ViewBag.ActivePage != null && ViewBag.ActivePage == "Trade/Orders" ? "nav-active" : "")" style="text-decoration: none; color: #0349A3;">Orders</a>
            </div>
        </div>

        @RenderBody()

        @RenderSection("Scripts", false);
    </div>
</body>
</html>
